# 97layerOS Environment Variables Template
# Copy: cp .env.example .env
# .env is gitignored and driveignored — never commit real values

# === REQUIRED ===

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Admin User ID (for Nightguard alerts)
# Get from @userinfobot on Telegram
ADMIN_TELEGRAM_ID=your_telegram_user_id_here

# Google AI (Gemini)
# https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here   # same key, alias

# Anthropic (Claude)
# https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# === OPTIONAL ===

# Google Drive (for gdrive_sync.py)
# Folder ID from Google Drive folder URL
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Timezone
TZ=Asia/Seoul

# Website (woohwahae.kr) — ContentPublisher 자동 발행용
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_REPO=97layer/97layerOS
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
